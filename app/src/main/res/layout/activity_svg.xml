        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dear" />


    <com.opensource.svgaplayer.SVGAImageView
        android:id="@+id/svgaima"
        android:layout_width="353dp"
        android:layout_height="212dp"
