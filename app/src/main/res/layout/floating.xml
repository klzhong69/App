<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dp_150"
    android:layout_height="@dimen/dp_80"
    android:orientation="vertical">

    <com.qmuiteam.qmui.widget.QMUIRadiusImageView
        android:id="@+id/float_back"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="@dimen/dp_10"
        android:src="@color/color_333333"
        app:qmui_border_width="0dp"
        app:qmui_corner_radius="@dimen/dp_30" />

    <com.qmuiteam.qmui.widget.QMUIRadiusImageView
        android:id="@+id/float_ima"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_alignStart="@+id/float_back"
        android:layout_alignTop="@+id/float_back"
        android:layout_alignBottom="@+id/float_back"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_5"
        android:src="@drawable/h4"
        app:layout_constraintEnd_toEndOf="parent"
        app:qmui_border_width="0dp"
        app:qmui_corner_radius="@dimen/dp_50" />

    <com.qmuiteam.qmui.widget.QMUIRadiusImageView
        android:id="@+id/float_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/float_ima"
        android:layout_alignBottom="@+id/float_ima"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_toEndOf="@+id/float_ima"
        app:srcCompat="@drawable/noless" />
</RelativeLayout>