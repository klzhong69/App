<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/component2"
    android:background="#aa000000">

    <RelativeLayout
        android:id="@+id/recyclerbutc2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/imageViewc2"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp">

    </RelativeLayout>

    <ImageView
        android:id="@+id/imageViewc2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_above="@+id/relativec2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/ima" />

    <TextView
        android:id="@+id/textViewc2s"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/recyclerbutc2"
        android:layout_alignBottom="@+id/imageViewc2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/dp_220"
        android:gravity="center"
        android:text="关注"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp_20" />

    <TextView
        android:id="@+id/textViewc2t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recyclerbutc2"
        android:layout_alignBottom="@+id/imageViewc2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/dp_300"
        android:gravity="center"
        android:text="粉丝"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp_20" />

    <TextView
        android:id="@+id/textViewc2d"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/recyclerbutc2"
        android:layout_alignBottom="@+id/imageViewc2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/dp_220"
        android:gravity="center"
        android:text="关注"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp_24" />

    <TextView
        android:id="@+id/textViewc2f"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recyclerbutc2"
        android:layout_alignBottom="@+id/imageViewc2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/dp_300"
        android:gravity="center"
        android:text="粉丝"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp_24" />

    <RelativeLayout
        android:id="@+id/relativec2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_600"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:background="@color/qmui_config_color_white">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerc2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>


    <ImageView
        android:id="@+id/imageViewc2t"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_below="@+id/recyclerbutc2"
        android:layout_alignBottom="@+id/imageViewc2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/dp_10"
        app:srcCompat="@drawable/fold_white" />

</RelativeLayout>