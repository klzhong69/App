            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_toEndOf="@+id/imageView18"
            app:srcCompat="@drawable/l3" />

        <TextView
            android:id="@+id/textView114"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/imageView66"
            android:layout_alignBottom="@+id/imageView18"
            android:layout_marginBottom="@dimen/dp_5"
            android:gravity="center_vertical"
            android:text="我是哒哒哒" />

        <ImageView
            android:id="@+id/imageView31"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_alignEnd="@+id/imageView18"
            android:layout_alignBottom="@+id/imageView18"
            app:srcCompat="@drawable/nv" />

    </RelativeLayout>

</RelativeLayout>