            android:textSize="@dimen/sp_20" />

        <TextView
            android:id="@+id/textView67"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView66"
            android:layout_alignStart="@+id/textView66"
            android:layout_alignBottom="@+id/imageView18"
            android:gravity="center_vertical"
            android:text="hi伙伴，明天一起直播吗"
            android:textSize="@dimen/sp_14" />

        <ImageView
            android:id="@+id/imageView67"
            android:layout_width="@dimen/dp_15"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView66"
            android:layout_alignBottom="@+id/textView66"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_toEndOf="@+id/textView66"
            app:srcCompat="@drawable/nans" />

        <ImageView
            android:id="@+id/imageView79"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_alignTop="@+id/imageView18"
            android:layout_alignBottom="@+id/imageView18"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_20"
            app:srcCompat="@drawable/siliao" />


    </RelativeLayout>



