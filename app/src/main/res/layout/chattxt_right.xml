<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/head1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/dp_100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.qmuiteam.qmui.widget.QMUIRadiusImageView
            android:id="@+id/imageView20"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:scaleType="centerInside"
            android:clickable="true"
            app:qmui_border_width="0dp"
            android:src="@drawable/b2"
            app:qmui_corner_radius="@dimen/dp_10" />

        <com.cxd.chatview.moudle.ChatView
            android:id="@+id/chatView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView20"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_toStartOf="@+id/imageView20"
            android:layout_marginBottom="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_15"
            android:paddingTop="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20"
            android:paddingBottom="@dimen/dp_15"

            app:arrow_direction="right"
            app:arrow_height="12dp"
            app:arrow_up_distance="@dimen/dp_10"
            app:arrow_width="5dp"
            app:conner_radius="@dimen/dp_10"
            app:fill_color="@android:color/white"
            app:is_arrow_center="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:stroke_width="0dp"
            app:stroke_color="#ffffff">

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="这是箭头向右的聊天气泡"
                android:textColor="@android:color/black"
                android:textSize="@dimen/sp_18" />
        </com.cxd.chatview.moudle.ChatView>

    </RelativeLayout>
</RelativeLayout>