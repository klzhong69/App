<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_102"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:background="@color/qmui_config_color_white">

        <TextView
            android:id="@+id/textView66"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:text="星坠-天空的幻想-林晓夜"
            android:textSize="@dimen/sp_20" />

        <ImageView
            android:id="@+id/imageView66"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_below="@+id/textView66"
            android:layout_alignStart="@+id/textView66"
            android:layout_marginTop="@dimen/dp_10"
            app:srcCompat="@drawable/time" />

        <TextView
            android:id="@+id/textView67"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView66"
            android:layout_alignBottom="@+id/imageView66"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_toEndOf="@+id/imageView66"
            android:gravity="center_vertical"
            android:text="00.00"
            android:textColor="#8a8a8a"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:id="@+id/textView68"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView66"
            android:layout_alignBottom="@+id/imageView66"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_20"
            android:gravity="center_vertical"
            android:text="80%"
            android:textColor="#8a8a8a"
            android:textSize="@dimen/sp_18" />

        <ImageView
            android:id="@+id/imageView67"
            android:layout_width="@dimen/dp_30"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="@dimen/dp_20"
            app:srcCompat="@drawable/play" />
    </RelativeLayout>



</RelativeLayout>