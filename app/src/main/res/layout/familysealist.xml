<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_110">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:background="@color/qmui_config_color_white">

        <com.qmuiteam.qmui.widget.QMUIRadiusImageView
            android:id="@+id/imageView28"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="19dp"
            android:layout_marginTop="13dp"
            android:src="@drawable/back2"
            app:layout_constraintEnd_toEndOf="parent"
            app:qmui_border_width="0dp"
            app:qmui_corner_radius="@dimen/dp_50" />


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView28"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/imageView28"
            android:text="【芭比】UUD小可爱"
            android:textColor="#000000"
            android:textSize="@dimen/sp_20" />


        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_alignStart="@+id/textView2"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:text="ID265849622"
            android:textColor="#000000"
            android:textSize="@dimen/sp_18"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="@dimen/dp_40"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView2"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_toEndOf="@+id/textView2"
            app:layout_constraintBottom_toBottomOf="@+id/textView2"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            app:srcCompat="@drawable/l3" />

        <ImageView
            android:id="@+id/imageView38"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_30"
            android:layout_alignTop="@+id/imageView28"
            android:layout_alignBottom="@+id/imageView28"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_20"
            app:srcCompat="@drawable/back2" />
    </RelativeLayout>

</RelativeLayout>