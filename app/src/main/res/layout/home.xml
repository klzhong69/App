                android:text="随便看看"
                android:textSize="@dimen/sp_20"
                app:layout_constraintBottom_toBottomOf="@+id/imageView34"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imageView34" />

        </RelativeLayout>

        <com.youth.banner.Banner
