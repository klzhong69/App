<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/component4"
    android:background="#aa000000">

    <RelativeLayout
        android:id="@+id/recyclerbutc4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/imageViewc4"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        >


    </RelativeLayout>

    <ImageView
        android:id="@+id/imageViewc4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:layout_above="@+id/relativec4"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/ima" />


    <com.qmuiteam.qmui.widget.QMUIRadiusImageView
        android:id="@+id/imageViewc4s"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:layout_below="@+id/recyclerbutc4"
        android:layout_alignBottom="@+id/imageViewc4"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:src="@drawable/h3"
        app:qmui_border_width="0dp"
        app:qmui_corner_radius="@dimen/dp_50" />

    <TextView
        android:id="@+id/textViewc4d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageViewc4s"
        android:layout_alignTop="@+id/imageViewc4s"
        android:layout_marginStart="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_40"
        android:background="@drawable/subscript"
        android:visibility="gone"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/qmui_config_color_white"
        android:textSize="@dimen/sp_12"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/gridviewc4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recyclerbutc4"
        android:layout_alignBottom="@+id/imageViewc4"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_toEndOf="@+id/imageViewc4s"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <RelativeLayout
        android:id="@+id/relativec4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_450"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:background="#666666">


        <TextView
            android:id="@+id/textViewc4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/txtframeblue"
            android:paddingStart="@dimen/dp_10"
            android:paddingTop="@dimen/dp_2"
            android:paddingEnd="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_2"
            android:text="礼物"
            android:textColor="@color/design_default_color_secondary"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:id="@+id/textViewc4s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textViewc4"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_toEndOf="@+id/textViewc4"
            android:paddingStart="@dimen/dp_10"
            android:paddingTop="@dimen/dp_2"
            android:paddingEnd="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_2"
            android:text="等级礼物"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:id="@+id/textViewc4t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textViewc4s"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_toEndOf="@+id/textViewc4s"
            android:paddingStart="@dimen/dp_10"
            android:paddingTop="@dimen/dp_2"
            android:paddingEnd="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_2"
            android:text="八宝盒"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_18" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerc4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/imageViewc4t"
            android:layout_below="@+id/textViewc4"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_10" />

        <com.qmuiteam.qmui.widget.QMUIRadiusImageView
            android:id="@+id/imageViewc4t"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:src="@color/backs"
            app:qmui_border_width="0dp"
            app:qmui_corner_radius="@dimen/dp_20" />

        <TextView
            android:id="@+id/textViewc4a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/imageViewc4t"
            android:layout_alignTop="@+id/imageViewc4t"
            android:layout_alignEnd="@+id/imageViewc4t"
            android:layout_alignBottom="@+id/imageViewc4t"
            android:gravity="center"
            android:text="赠送"
            android:textColor="@color/design_default_color_secondary" />

        <com.qmuiteam.qmui.widget.QMUIRadiusImageView
            android:id="@+id/imageViewc4a"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_toStartOf="@+id/imageViewc4t"
            android:src="@color/backs"
            app:qmui_border_width="0dp"
            app:qmui_corner_radius="@dimen/dp_20" />

        <TextView
            android:id="@+id/textViewc4b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/imageViewc4a"
            android:layout_alignTop="@+id/imageViewc4a"
            android:layout_alignBottom="@+id/imageViewc4a"
            android:layout_marginStart="@dimen/dp_20"
            android:gravity="center"
            android:text="1"
            android:textColor="#ffffff" />

        <ImageView
            android:id="@+id/imageViewc4b"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_alignTop="@+id/imageViewc4a"
            android:layout_alignEnd="@+id/imageViewc4a"
            android:layout_alignBottom="@+id/imageViewc4a"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            app:srcCompat="@drawable/qmui_icon_chevron" />

        <com.qmuiteam.qmui.widget.QMUIRadiusImageView
            android:id="@+id/imageViewc4c"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_10"
            android:src="@color/backs"
            app:qmui_border_width="0dp"
            app:qmui_corner_radius="@dimen/dp_20" />

        <ImageView
            android:id="@+id/imageViewc4d"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_alignStart="@+id/imageViewc4c"
            android:layout_alignTop="@+id/imageViewc4c"
            android:layout_alignBottom="@+id/imageViewc4c"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5"
            app:srcCompat="@drawable/chongzhi" />

        <TextView
            android:id="@+id/textViewc4c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageViewc4c"
            android:layout_alignBottom="@+id/imageViewc4c"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_toEndOf="@+id/imageViewc4d"
            android:gravity="center"
            android:text="充值"
            android:textColor="#F7B500"
            android:textSize="@dimen/sp_20" />

    </RelativeLayout>


</RelativeLayout>