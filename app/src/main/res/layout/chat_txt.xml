<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_80">

    <RelativeLayout
        android:id="@+id/head1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/dp_100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.qmuiteam.qmui.widget.QMUIRadiusImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:scaleType="centerInside"
            android:clickable="true"
            android:src="@drawable/h2"
            app:qmui_border_width="0dp"
            app:qmui_corner_radius="@dimen/dp_50" />

        <com.cxd.chatview.moudle.ChatView
            android:id="@+id/chatView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView1"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_toEndOf="@+id/imageView1"

            android:paddingLeft="@dimen/dp_20"
            android:paddingTop="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20"
            android:paddingBottom="@dimen/dp_20"

            app:arrow_direction="left"
            app:arrow_height="@dimen/dp_15"
            app:arrow_up_distance="@dimen/dp_15"
            app:arrow_width="@dimen/dp_5"
            app:conner_radius="@dimen/dp_20"
            app:fill_color="@android:color/white"
            app:is_arrow_center="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:stroke_color="#ffffff">

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="这是箭头向左的聊天气泡"
                android:textColor="@android:color/black"
                android:textSize="@dimen/sp_18" />
        </com.cxd.chatview.moudle.ChatView>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/head2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/dp_100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.qmuiteam.qmui.widget.QMUIRadiusImageView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:scaleType="centerInside"
            android:clickable="true"
            app:qmui_border_width="0dp"
            android:src="@drawable/h4"
            app:qmui_corner_radius="@dimen/dp_50" />

        <com.cxd.chatview.moudle.ChatView
            android:id="@+id/chatView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView2"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_toStartOf="@+id/imageView2"
            android:paddingLeft="@dimen/dp_20"
            android:paddingTop="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20"
            android:paddingBottom="@dimen/dp_20"
            app:arrow_direction="right"
            app:arrow_height="@dimen/dp_15"
            app:arrow_up_distance="@dimen/dp_15"
            app:arrow_width="@dimen/dp_5"
            app:conner_radius="@dimen/dp_20"
            app:fill_color="@color/tabbarcolor"
            app:is_arrow_center="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:stroke_width="0dp">

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="这是箭头向右的聊天气泡"
                android:textColor="@android:color/black"
                android:textSize="@dimen/sp_18" />
        </com.cxd.chatview.moudle.ChatView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/head3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:gravity="center">

        <TextView
            android:id="@+id/textViewtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@drawable/rounded"
            android:paddingStart="@dimen/dp_20"
            android:paddingTop="@dimen/dp_5"
            android:paddingEnd="@dimen/dp_20"
            android:paddingBottom="@dimen/dp_5"
            android:text="周二 18:06"
            android:textSize="@dimen/sp_18"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </RelativeLayout>



</RelativeLayout>